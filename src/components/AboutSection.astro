<style>
  :root {
    --accent: #6C63FF; /* Modern purple accent */
    --accent-dark: #4A47A3; /* Darker shade for gradients */
    --text-primary: #2D2D2D; /* Dark gray for text */
    --text-secondary: #555555; /* Lighter gray for secondary text */
    --card-bg: #FFFFFF; /* White background for cards */
    --bg-tertiary: #F8F9FA; /* Light gray for secondary backgrounds */
    --border-color: #E0E0E0; /* Light border color */
    --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }

  .about {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%); /* Subtle gradient background */
    border-radius: 16px;
    box-shadow: var(--card-shadow);
    border: 1px solid var(--border-color);
    margin-bottom: 3rem;
  }

  .content {
    max-width: 900px;
    margin: 0 auto;
  }

  .profile {
    display: flex;
    gap: 3rem;
    margin-bottom: 2.5rem;
    align-items: center;
  }

  .profile-image {
    flex-shrink: 0;
    position: relative;
  }

  .profile-image::after {
    content: '';
    position: absolute;
    top: -8px;
    left: -8px;
    right: -8px;
    bottom: -8px;
    border: 2px solid var(--accent);
    border-radius: 50%;
    opacity: 0.3;
  }

  .profile-image img {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--accent);
    box-shadow: var(--card-shadow);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .profile-image img:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(108, 99, 255, 0.2);
  }

  .profile-content {
    flex-grow: 1;
  }

  h2 {
    margin-bottom: 1.5rem;
    font-size: 2.5rem;
    background: linear-gradient(45deg, var(--accent), var(--accent-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Poppins', sans-serif; /* Modern font */
  }

  p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-secondary);
    font-family: 'Open Sans', sans-serif; /* Readable font */
  }

  .now-section {
    background: var(--bg-tertiary);
    padding: 2rem;
    border-radius: 12px;
    margin-top: 2rem;
    border-left: 4px solid var(--accent); /* Accent border */
  }

  .now-section h3 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif; /* Consistent font */
  }

  .now-section p {
    margin: 0;
    line-height: 2;
  }

  @media (max-width: 768px) {
    .profile {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .profile-image {
      margin: 0 auto;
    }

    h2 {
      font-size: 2rem;
    }
  }
</style>