---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, PORTFOLIO_URL, SUBSTACK_URL } from '../consts';
---

<header>
  <nav>
    <div class="logo">
      <a href="/">{SITE_TITLE}</a>
    </div>
    <div class="nav-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href={PORTFOLIO_URL} target="_blank">Portfolio</HeaderLink>
      <HeaderLink href={SUBSTACK_URL} target="_blank">Newsletter</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 1rem;
    background: var(--bg-secondary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo a {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  @media (max-width: 720px) {
    nav {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .nav-links {
      justify-content: center;
    }
  }
</style>